<!DOCTYPE html>
<html>
<head>
    <style>
        .page-container {
            position: relative;
            height: 100vh;
            padding-top: 150px;
            padding-left: 30px;
            padding-right: 300px;
        }

    </style>
</head>
<body>
    <div class="page-container">
        <div class="centered-div">
            <h2>Categories</h2>
            <p>
                <a asp-action="Create" class="btn btn-primary mb-2">Create New</a>
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Categories
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>
                                @category.Name
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@category.CategoriesId">Details</a> |
                                <a asp-action="Edit" asp-route-id="@category.CategoriesId">Edit</a> |
                                <a asp-action="Delete" asp-route-id="@category.CategoriesId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
